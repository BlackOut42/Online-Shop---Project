<%- include("../../shared/includes/head",{pageTitle: product.title}) %>
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/cart-management.js" defer></script>
</head>
    <body>
        <%- include("../../shared/includes/header") %>
        <main id="product-details">
            <header>
                <img src="<%= product.imageURL %>" alt="<%= product.title %>">
                <div id="product-information">
                    <h1><%= product.title %></h1>
                    <p id="price">Price: <%= product.price %> Credits</p>
                    <button class="btn btn-alt" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Add to Cart</button>
                </div>
            </header>
            <h3 id="description-head">Description</h3>
            <p id="product-description"><%= product.description %></p>
        </main>
    </body>
</html>
