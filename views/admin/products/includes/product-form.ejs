<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="post" class="default-text-form" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= product.title %>" required>
    </p>
    <div id="image-upload-control">
        <p>
            <label for="image">Image</label>
            <input class="bg-transparent" type="file" name="image" id="image" accept="image/png,image/jpg" <% if(imageRequired){ %> required <% } %>>
        </p>
        <img src="" alt="Your image.">
    </div>
    <p>
        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" maxlength="255" value="<%= product.summary %>" required>
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" name="price" id="price" min="0.01" step="0.01" value="<%= product.price %>" required>
    </p>
    <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="7" required><%= product.description %></textarea>
    </p>
    <button type="reset" class="btn">Reset</button>
    <button class="btn btn-alt">Save</button>
</form>