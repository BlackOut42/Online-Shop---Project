<%- include("../../shared/includes/head",{pageTitle:"Add Product"}) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
    <body>
        <%- include("../../shared/includes/header") %>
        <main>
            <h1>Add new Product</h1>
            <form action="/admin/products/add?_csrf=<%= locals.csrfToken %>" method="post" class="default-text-form" enctype="multipart/form-data">
                <p>
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" required>
                </p>
                <p>
                    <label for="image">Image</label>
                    <input class="bg-transparent" type="file" name="image" id="image" accept="image/png,image/jpg"  required>
                </p>
                <p>
                    <label for="summary">Summary</label>
                    <input type="text" name="summary" id="summary" maxlength="255" required>
                </p>
                <p>
                    <label for="price">Price</label>
                    <input type="number" name="price" id="price" min="0.01" step="0.01" required>
                </p>
                <p>
                    <label for="description">Description</label>
                    <textarea name="description" id="description" rows="7" required></textarea>
                </p>
                <button type="reset" class="btn">Reset</button>
                <button class="btn btn-alt">Save</button>
            </form>
        </main>
    </body>
</html>
